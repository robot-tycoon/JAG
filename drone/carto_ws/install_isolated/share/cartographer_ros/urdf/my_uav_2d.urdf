<?xml version='1.0'?>
<robot name="cartographer_uav_2d">

<material name="orange">
  <color rgba="1.0 0.5 0.2 1" />
</material>
<material name="gray">
  <color rgba="0.2 0.2 0.2 1" />
</material>
<material name="blue">
  <color rgba="0 0.5 1 1" />
</material>

<link name="base_link" />

<link name="imu_link">
  <visual>
    <origin xyz="0 0 0" />
    <geometry>
      <box size="0.06 0.04 0.02" />
    </geometry>
    <material name="orange" />
  </visual>
</link>

<link name="horizontal_laser_link">
  <visual>
    <origin xyz="0 0 0" />
    <geometry>
      <box size="0.05 0.05 0.07" />
    </geometry>
    <material name="gray" />
  </visual>
</link>

<link name="tfmini_link">
  <visual>
    <origin xyz="0 0 0" />
    <geometry>
      <box size="0.035 0.0185 0.021" />
    </geometry>
    <material name="gray" />
  </visual>
</link>

<joint name="imu_link_joint" type="fixed">
  <parent link="base_link" />
  <child link="imu_link" />
  <origin xyz="0 0 0.095" />
</joint>

<joint name="horizontal_laser_link_joint" type="fixed">
  <parent link="base_link" />
  <child link="horizontal_laser_link" />
  <origin xyz="0 0 0.115" />
</joint>

<!-- 测量tfmini定高雷达实际的安装位置在x,y,z轴上与飞控的偏差值 -->
<joint name="tfmini_link_joint" type="fixed">
  <parent link="base_link" />
  <child link="tfmini_link" />
  <origin xyz="-0.045 0.02 -0.13" />
</joint>

</robot>

